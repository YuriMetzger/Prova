<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Prova"
        android:id="@+id/idConfirmar">

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="63dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="46dp" android:id="@+id/radioGroup">
        <RadioButton
                android:text="Bolsonaro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="179dp"
                tools:layout_editor_absoluteX="47dp" android:id="@+id/rbBolsonaro" android:checked="false"/>
        <RadioButton
                android:text="Marina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbMarina"
                app:layout_constraintStart_toStartOf="@+id/rbBolsonaro"
                android:layout_marginBottom="03dp"
                app:layout_constraintBottom_toTopOf="@+id/rbBolsonaro"/>
        <RadioButton
                android:text="Lula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbLula"
                app:layout_constraintStart_toStartOf="@+id/rbMarina"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/rbMarina"/>
        <RadioButton
                android:text="Doria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbDoria"
                app:layout_constraintStart_toStartOf="@+id/rbLula"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/rbLula"/>
        <RadioButton
                android:text="Branco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbBranco"
                app:layout_constraintStart_toStartOf="@+id/rbLula"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/rbLula"
                android:layout_weight="1"/>
        <RadioButton
                android:text="Nulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbNulo"
                app:layout_constraintStart_toStartOf="@+id/rbLula"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/rbLula"
                android:layout_weight="1"
                android:checked="false"/>
    </RadioGroup>
    <Button
            android:text="Confirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:layout_marginEnd="19dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="21dp" android:id="@+id/btConfirmar"/>
    <TextView
            android:text="Candidatos:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:id="@+id/textView"
            android:layout_marginTop="37dp" android:layout_alignStart="@+id/radioGroup"
            android:layout_marginStart="0dp"/>

</RelativeLayout>